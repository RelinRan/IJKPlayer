<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆圈进度-->
    <declare-styleable name="IJKCircleProgressView">
        <!--进度值-->
        <attr name="ijkProgress" format="integer|reference" />

        <!--进度最大值-->
        <attr name="ijkMax" format="integer|reference" />
        <!--进度颜色-->
        <attr name="ijkProgressColor" format="color|reference" />
        <!--进度文字-->
        <attr name="ijkProgressTextVisibility" format="enum">
            <enum name="visible" value="0"></enum>
            <enum name="invisible" value="4"></enum>
        </attr>
        <!--进度文字-->
        <attr name="ijkProgressText" format="string|reference" />
        <!--进度文字-->
        <attr name="ijkProgressTextSize" format="dimension|reference" />
        <!--进度文字颜色-->
        <attr name="ijkProgressTextColor" format="color|reference" />
        <!--进度背景色-->
        <attr name="ijkProgressBackgroundColor" format="color|reference" />
        <!--进度开始角度 0-360-->
        <attr name="ijkProgressStartAngle" format="float|reference" />
        <!--圆圈线宽度-->
        <attr name="ijkProgressStrokeWidth" format="dimension|reference" />
        <!--圆圈半径-->
        <attr name="ijkProgressRadius" format="dimension|reference" />
    </declare-styleable>
</resources>